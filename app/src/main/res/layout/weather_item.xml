<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </androidx.viewpager.widget.ViewPager>

    <ImageView
        android:id="@+id/RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/weather_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        android:text="31.12.2021"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="199dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:text="location"/>


    <ImageView
        android:id="@+id/im_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/weather_date"
        android:layout_marginTop="20sp"
        android:src="@drawable/sunny"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/weather_type"
        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/im_weather"
        android:layout_marginTop="10dp"
        android:text="Sunny"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/weather_date"
        android:layout_marginTop="10dp"
        android:text="33"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="190dp"/>

    <TextView
        android:id="@+id/temp_up"
        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        android:layout_marginTop="30dp"
        android:text="35+"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="320dp"/>

    <TextView
        android:id="@+id/temp_down"
        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        android:layout_marginTop="60dp"
        android:text="27-"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="320dp"/>

    <ImageView
        android:id="@+id/im_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_weather"
        android:layout_marginTop="60dp"
        android:src="@drawable/himidity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"/>

    <ImageView
        android:id="@+id/im_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_weather"
        android:layout_marginTop="60dp"
        android:src="@drawable/pressure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"/>

    <ImageView
        android:id="@+id/im_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_weather"
        android:layout_marginTop="60dp"
        android:src="@drawable/wind"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="320dp"/>

    <TextView
        android:id="@+id/text_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_humidity"
        android:layout_marginTop="10dp"
        android:text="27km/h"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="300dp"/>

    <TextView
        android:id="@+id/text_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_humidity"
        android:layout_marginTop="10dp"
        android:text="1,009mBar"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="180dp"/>

    <TextView
        android:id="@+id/text_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_humidity"
        android:layout_marginTop="10dp"
        android:text="49%"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"/>

    <TextView
        android:id="@+id/wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_humidity"
        android:layout_marginTop="10dp"
        android:text="wind"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="320dp"/>

    <TextView
        android:id="@+id/pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_humidity"
        android:layout_marginTop="10dp"
        android:text="pressure"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"/>

    <TextView
        android:id="@+id/humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_humidity"
        android:layout_marginTop="10dp"
        android:text="humidity"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"/>


    <ImageView
        android:id="@+id/im_sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/humidity"
        android:layout_marginTop="20dp"
        android:src="@drawable/sunset"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"/>

    <ImageView
        android:id="@+id/im_sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/humidity"
        android:layout_marginTop="20dp"
        android:src="@drawable/sunrise"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"/>

    <ImageView
        android:id="@+id/sand_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/humidity"
        android:layout_marginTop="20dp"
        android:src="@drawable/sandclock"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="320dp"/>

    <TextView
        android:id="@+id/text_sand_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_sunrise"
        android:layout_marginTop="10dp"
        android:text="7:32PM"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="300dp"/>

    <TextView
        android:id="@+id/text_sunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_sunrise"
        android:layout_marginTop="10dp"
        android:text="4:42PM"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="180dp"/>

    <TextView
        android:id="@+id/text_sunrise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/im_sunrise"
        android:layout_marginTop="10dp"
        android:text="9:16PM"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/day_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_sand_clock"
        android:layout_marginTop="10dp"
        android:text="Day Time"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="310dp"/>

    <TextView
        android:id="@+id/sunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_sand_clock"
        android:layout_marginTop="10dp"
        android:text="Sunset"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"/>

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_sand_clock"
        android:layout_marginTop="10dp"
        android:text="Sunrise"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_card"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/card_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sunny_card"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="55dp"/>

            <TextView
                android:id="@+id/card_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_sun"
                android:layout_marginTop="8dp"
                android:text="Mon,21"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/card_day"
                android:layout_marginTop="8dp"
                android:text="29. c 30 c"
                android:textColor="@color/black"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>









    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>